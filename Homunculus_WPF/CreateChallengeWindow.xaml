<Window x:Class="Homunculus_WPF.CreateChallengeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homunculus_WPF"
        xmlns:vm="clr-namespace:Homunculus_ViewModel;assembly=Homunculus_ViewModel"
        mc:Ignorable="d"
        Title="CreateChallengeWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Challenge Name:"/>
                <TextBox Name="challengeName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Click="addButton_Click" Margin="5">Add</Button>
                <Button Margin="5">Move Up</Button>
                <Button Margin="5">Move Down</Button>
                <Button Margin="5">Delete</Button>
            </StackPanel>
            <ListBox Name="splitsListBox" ItemsSource="{Binding SplitList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding SplitName}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal">
                <Button Name="okButton" Margin="5" Click="okButton_Click" IsDefault="True">OK</Button>
                <Button Name="cancelButton" Margin="5" IsCancel="True">Cancel</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
